<?xml version='1.0' encoding='UTF-8'?>
<odoo>
   <data>

    <record id="view_account_export_sircar_misiones_form" model="ir.ui.view">
         <field name="name">account.export.sircar.misiones.form</field>
         <field name="model">account.export.sircar.misiones</field>
         <field name="arch" type="xml">
            <form>
		<header>
			<button name="compute_sircar_misiones_data" string="Generar TXT SIRCAR Misiones" type="object" />
		</header>
		<sheet>
			<group>
				<field name="name" />
				<field name="date_from" />
				<field name="date_to" />
				<field name="tax_withholding" />
			</group>
			<group string="Archivo y datos">
				<field name="export_sircar_misiones_filename_ret" invisible="1"/>
				<field name="export_sircar_misiones_file_ret" widget="binary" filename="export_sircar_misiones_filename_ret"/>
				<field name="export_sircar_misiones_data_ret" readonly="1"/>
				<field name="export_sircar_misiones_filename_per" invisible="1"/>
				<field name="export_sircar_misiones_file_per" widget="binary" filename="export_sircar_misiones_filename_per"/>
				<field name="export_sircar_misiones_data_per" readonly="1"/>
			</group>
		</sheet>
            </form>
         </field>
    </record>

    <record id="view_account_export_sircar_misiones" model="ir.ui.view">
         <field name="name">account.export.sircar.misiones.tree</field>
         <field name="model">account.export.sircar.misiones</field>
         <field name="arch" type="xml">
            <list>
		<field name="name" />
		<field name="date_from" />
		<field name="date_to" />
            </list>
         </field>
    </record>



        <record id="action_account_export_sircar_misiones" model="ir.actions.act_window">
            <field name="name">Exportaciones de SRICAR Misiones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.export.sircar.misiones</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_account_export_sircar_misiones"
                  action="action_account_export_sircar_misiones"
                  parent="l10n_ar.account_reports_ar_statements_menu"
                  sequence="6"/>


       </data>
</odoo>
